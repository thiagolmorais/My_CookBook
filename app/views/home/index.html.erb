<div class="container">

  <%= flash[:error] %>
  <%= flash[:sucess] %>

  <div class="row">

    <div class="col-md-2">

      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><p class="subtitle">Tipo<p></h3>
        </div>
        <div class="panel-body">
          <% @recipe_types.each do |recipe_type| %>
          <h1 class="paragraph"><%= link_to recipe_type.name, recipe_type_path(recipe_type[:id]) %></h1>
          <% end %>
        </div>
      </div>

      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><p class="subtitle">Cozinha<p></h3>
          </div>
          <div class="panel-body">
            <% @cuisines.each do |cuisine| %>
            <h1 class="paragraph"><%= link_to cuisine.name, cuisine_path(cuisine[:id])%></h1>
            <% end %>
          </div>
        </div>
    </div>


    <div class="col-md-5" >
      <h1 class="title">Últimas Receitas</h1>
      <div class="last_recipes">
      <% @last_recipes.each do |recipe| %>
      <div class="col-md-6" >
        <br>
        <img><%= image_tag recipe.image.url, width: "130", height: "130"  if recipe.image.file? %></img>
      </div>
      <div class="col-md-6" >

            <h1 class="subtitle">
              <%= link_to recipe.title, recipe_path(recipe[:id]), class: "last_recipes"%>
              <img><%= image_tag "star.png", width: "25", height: "25" if recipe.featured %></img>
            </h1>

            <ul>
              <li class="resume" >Tipo: <%= recipe.recipe_type.name %></li>
              <li class="resume">Cozinha: <%= recipe.cuisine.name %></li>
              <li class="resume">Dificuldade: <%= recipe.difficulty %></li>
              <li class="resume">Tempo de preparo: <%= recipe.cook_time %> minutos</li>
            </ul>


        </div>

      <% end %>
      </div>

    </div>


    <div class="col-md-5">
      <h1 class="title">Favoritas dos usuários</h1>
      <div class="more_favorited_recipes">
      <% @more_favorited.each do |recipe| %>
      <div class="col-md-6">
        <br>
          <img><%= image_tag recipe.image.url, width: "130", height: "130" if recipe.image.file? %></img>
      </div>
      <div class="col-md-6">

          <h1 style="font-size:20px">
            <%= link_to recipe.title, recipe_path(recipe[:id]), class: "more_favorited_recipes" %>
            <img><%= image_tag "star.png", width: "25", height: "25" if recipe.featured %></img>
          </h1>
          <ul>
            <li>Tipo: <%= recipe.recipe_type.name %></li>
            <li>Cozinha: <%= recipe.cuisine.name %></li>
            <li>Dificuldade: <%= recipe.difficulty %></li>
            <li>Tempo de preparo: <%= recipe.cook_time %> minutos</li>
          </ul>


        </div>


    <% end %>
      </div>
  </div>
</div>
</div>
