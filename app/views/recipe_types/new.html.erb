<div class="container">

  <h1>Cadastrar um Tipo de Receita</h1>
  <br>
  <%= flash[:error] %>
  <br>
  <%= form_for(@recipe_type) do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  </div>
  <div>
    <%= f.submit 'Enviar', class: "btn btn-success" %>
  </div>

  <% end %>

</div>
