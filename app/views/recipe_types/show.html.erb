<h1><%= @recipe_type.name %></h1>

<% i = 0 %>
<% @recipes.each do |recipe| %>
 <% if (recipe.recipe_type.name == @recipe_type.name) %>
 <% i = i+1 %>
 <h1><%= link_to recipe.title, recipe_path(recipe[:id])%></h1>
 <ul>
   <li><%= recipe.recipe_type.name %></li>
   <li><%= recipe.cuisine.name %></li>
   <li><%= recipe.difficulty %></li>
   <li><%= recipe.cook_time %> minutos</li>
 </ul>
 <% end %>
<% end %>

<%= 'Nenhuma receita encontrada para este tipo de receitas' if (i==0) %>
