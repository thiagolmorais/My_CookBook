<%= render 'layouts/header' %>

<div class="container">

<h1><%= @recipe.title %></h1>

<h3>Detalhes</h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time %> minutos</p>
<p><%= @recipe.people_serve %></p>

<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>

<h3>Como Preparar</h3>
<p><%= @recipe.method %></p>

<p><%= "Enviada por #{@recipe.user.username}" %></p>



<div>
<%= link_to 'Editar', edit_recipe_path if user_signed_in?%>
</div>
<div>
<%= link_to 'Voltar', root_path %>
</div>
</div>
