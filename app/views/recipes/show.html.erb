<%= render 'layouts/header' %>

<div class="container">
<br>
<p><%= flash[:sucess] %></p>
<br>
<h1><%= @recipe.title %></h1>

<h3>Detalhes</h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time %> minutos</p>
<p><%= @recipe.people_serve %></p>

<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>

<h3>Como Preparar</h3>
<p><%= @recipe.method %></p>

<p><%= "Enviada por #{@recipe.user.username}" %></p>

<div>

      <%= link_to 'Salvar como Favorita', favorites_path(recipe_id: @recipe.id, user_id: current_user.id), method: :post if user_signed_in? %>
  
</div>

<div>
    <%= link_to 'Editar', edit_recipe_path if (current_user == @recipe.user) %>
</div>
<div>
    <%= link_to 'Excluir Receita', @recipe, method: :delete if (current_user == @recipe.user) %>
</div>
<div>
<%= link_to 'Voltar', root_path %>
</div>
</div>
