<p><%= flash[:sucess] %></p>
<div class="container">


  <div class="row">

    <div class="col-md-2">

      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><p class="subtitle">Tipo<p></h3>
        </div>
        <div class="panel-body">
          <% @recipe_types.each do |recipe_type| %>
          <h1 class="paragraph"><%= link_to recipe_type.name, recipe_type_path(recipe_type[:id]) %></h1>
          <% end %>
        </div>
      </div>

      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><p class="subtitle">Cozinha<p></h3>
          </div>
          <div class="panel-body">
            <% @cuisines.each do |cuisine| %>
            <h1 class="paragraph"><%= link_to cuisine.name, cuisine_path(cuisine[:id])%></h1>
            <% end %>
          </div>
        </div>
    </div>

<div class="col-md-4">
  <h1>
    <%= @recipe.title %>
    <img><%= image_tag "star.png", width: "25", height: "25" if @recipe.featured %></img>
  </h1>
    <p><%= "Enviada por #{@recipe.user.username}" %></p>
  <h3>Detalhes</h3>
  <p>Tipo: <%= @recipe.recipe_type.name %></p>

  <p>Cozinha: <%= @recipe.cuisine.name %></p>
  <p>Serve: <%= @recipe.people_serve %> pessoas</p>
  <p>Tempo de preparo: <%= @recipe.cook_time %> minutos</p>
  <p>Dificuldade: <%= @recipe.difficulty %></p>



  <h3>Ingredientes</h3>
  <p><%= @recipe.ingredients %></p>
</div>
<div class="col-md-6">
  <br>

    <img><%= image_tag @recipe.image.url, width: "380", height: "230" if @recipe.image.file? %></img>
  <br>
  <br>
  <br>
  <h3>Como Preparar</h3>
  <p><%= @recipe.method %></p>
</div>

</div>
</div>
<hr>
<div class="container">
  <div class="row">

    <div class="col-md-2">
    </div>

    <div class="col-md-4">
      <% if user_signed_in? %>
        <% if @recipe.favorite?(current_user) %>
          <%= link_to 'Excluir das Favoritas', unfavorite_recipe_path(@recipe), class:"btn btn-warning", method: :delete %>
        <% else %>
          <%= link_to 'Salvar como Favorita', favorite_recipe_path(@recipe), class:"btn btn-info", method: :post %>
        <% end %>
      <% end %>



    <div>
      <%= link_to 'Editar', edit_recipe_path, class:"btn btn-success" if (current_user == @recipe.user) %>
    </div>

    <div>
      <%= link_to 'Excluir Receita', @recipe, method: :delete, class:"btn btn-danger" if (current_user == @recipe.user) %>
    </div>

    <div>
      <%= link_to 'Voltar', root_path, class:"btn btn-default" %>
    </div>
  </div>
    <div class="col-md-6">
      <div>
        <%= form_tag(share_recipe_path, method: "post") do %>
        <div class="form-group">
          <%= label_tag :email, "Email", class: "col-sm-2 control-label" %>
          <%= email_field_tag(:email) %>
        </div>
        <div class="form-group">
          <%= label_tag :message, "Mensagem", class: "col-sm-2 control-label" %>
          <%= text_area_tag(:message) %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Enviar', class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>



  </div>
</div>
