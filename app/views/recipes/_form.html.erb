  <br>
  <%= flash[:error] %>
  <br>


  <form class="form-horizontal">


  <%= form_for (@recipe), html: {multipart: true}, class: "form-horizontal" do |f| %>


  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :recipe_type_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :recipe_type_id, @recipe_type, :id, :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cuisine_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :cuisine_id, @cuisines, :id, :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :difficulty, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :difficulty, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cook_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cook_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :people_serve, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :people_serve, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ingredients, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :ingredients, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :method, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :method, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="hide">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
      <%= check_box_tag :featured, class: "checkbox" %>
      <%= label_tag :featured, 'Destaque', class: "col-sm-2 control-label" %>
  </div>


  <div class="navbar-right">
    <%= f.submit 'Enviar', class: "btn btn-success" %>
  </div>


  <% end %>

</div>
