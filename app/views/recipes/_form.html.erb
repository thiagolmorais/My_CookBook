<div class="container">

  <div class="row">
    <div class="col-md-8 col-sm-8">

      <%= flash[:error] %>

      <%= form_for (@recipe), html: {multipart: true} do |f| %>


      <div class="form-group">
        <%= f.label :title, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :recipe_type_id, class: "col-sm-3 control-label" %>
          <%= f.collection_select :recipe_type_id, @recipe_type, :id, :name %>
      </div>
      <div class="form-group">
        <%= f.label :cuisine_id, class: "col-sm-3 control-label" %>
          <%= f.collection_select :cuisine_id, @cuisines, :id, :name %>
      </div>
      <div class="form-group">
        <%= f.label :difficulty, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :difficulty, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :cook_time, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.number_field :cook_time, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :people_serve, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.number_field :people_serve, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :ingredients, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :ingredients, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :method, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :method, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="hide">
        <%= f.label :user_id %>
        <%= f.text_field :user_id, value: current_user.id %>
      </div>

      <div class="form-group">
          <%= check_box_tag :featured %>
          <%= label_tag :featured, 'Destaque', class: "col-sm-3 control-label" %>
      </div>
      <div class="navbar-right">
        <%= f.submit 'Enviar', class: "btn btn-success" %>
      </div>

      <% end %>

    </div>
    <div class="col-md-2 col-sm-2">
    </div>
    <div class="col-md-2 col-sm-2">
    </div>
  </div>
</div>
