<h1>Cadastrar uma receita</h1>

<%= form_for(@recipe) do |f| %>

<div>
<%= f.label :title, 'TÃ­tulo' %>
<%= f.text_field :title %>
</div>
<div>
<%= f.label :recipe_type_id, 'Tipo da Receita' %>
<%= f.collection_select :recipe_type_id, @recipe_type, :id, :name %>
</div>
